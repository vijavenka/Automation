{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "timestamp": {
      "type": "string"
    },
    "errors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "fieldName": {
            "type": [
              "string",
              "null"
            ]
          }
        },
        "required": [
          "message",
          "fieldName"
        ]
      }
    }
  },
  "required": [
    "timestamp"
  ]
}