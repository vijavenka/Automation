{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "UserBalance",
  "description": "Object returned with User Balance Details",
  "type": "object",
  "properties": {
    "userId": {
      "type": "string"
    },
    "pendingPoints": {
      "type": "integer",
      "minimum": 0
    },
    "declinedPoints": {
      "type": "integer",
      "minimum": 0
    },
    "confirmedPoints": {
      "type": "integer",
      "minimum": 0
    },
    "redeemedPoints": {
      "type": "integer",
      "minimum": 0
    }
  },
  "required": [
    "userId",
    "pendingPoints",
    "declinedPoints",
    "confirmedPoints",
    "redeemedPoints"
  ]
}